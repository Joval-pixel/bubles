{
  "version": 2,

  // Garante que tudo dentro de /api vira função Node
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20",
      "memory": 256,
      "maxDuration": 10,
      "regions": ["gru1"] // Brasil
    }
  },

  // Como servir os arquivos estáticos
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" }
  ],

  // Regras de roteamento (preserva /api e manda o resto pro index.html)
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
